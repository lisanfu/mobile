<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText android:hint="请输入密码"
        android:id="@+id/protected_pw_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"/>
    <EditText android:hint="确认密码"
        android:id="@+id/protected_pw_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"/>
    <EditText android:id="@+id/protected_pw_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="密码取回问题"/>
    <EditText android:id="@+id/protected_pw_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="密码取回答案"/>

</LinearLayout>
